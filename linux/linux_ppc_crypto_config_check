#!/bin/bash

[ -n "$1" ] && CONFIG_FILE=$1 || CONFIG_FILE=".config"
[ ! -f "$CONFIG_FILE" ] && echo "Invalid file: $CONFIG_FILE" && exit 1

read -d '' LIST <<-EOF
CONFIG_CPU_LITTLE_ENDIAN
CONFIG_CRYPTO_DEV_NX
CONFIG_CRYPTO_DEV_NX_COMPRESS
CONFIG_CRYPTO_DEV_VMX
CONFIG_CRYPTO_DEV_VMX_ENCRYPT
CONFIG_CRYPTO_MANAGER_DISABLE_TESTS
EOF

OLDIFS=$IFS
IFS=$'\n'
for ITEM in $LIST; do
	grep "\b$ITEM\b" $CONFIG_FILE
done
IFS=$OLDIFS
